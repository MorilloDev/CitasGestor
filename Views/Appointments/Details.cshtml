@model CitasGestor.Models.Appointment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <div class="card w-50">
        <div class="card-body">
            <h5 class="card-title"> @Html.DisplayFor(model => model.UserName)</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        </div>
    </div>


    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha de creacion 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>

        <dt class = "col-sm-2">
            Fecha de la cita 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppointmentDate)
        </dd>

        <dt class = "col-sm-2">
            Nombre del usuario 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt class = "col-sm-2">
            Edad del usuario 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserAge)
        </dd>

        <dt class = "col-sm-2">
            Le asiste 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Attendant)
        </dd>

        <dt class = "col-sm-2">
            Monto a pagar 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AmountPayable)
        </dd>

        <dt class = "col-sm-2">
            Estatus de la cita 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
